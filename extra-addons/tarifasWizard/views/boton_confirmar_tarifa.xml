<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="sale_h_order_view" model="ir.ui.view">
    <field name="name">sale.order.form.inherit.h</field>
    <field name="model">sale.order</field>
    <field name="inherit_id" ref="sale.view_order_form" />
    <field name="arch" type="xml">
      <xpath expr="//button[@name='action_confirm']" position="after">
        <button name="action_confirm" data-hotkey="v"
                        string="Confirm" type="object"
                        groups="sales_team.group_sale_manager"
                        attrs="{'invisible': [('state', 'not in', ['waiting'])]}"/>
        <button name="action_cancel" type="object" groups="sales_team.group_sale_manager" string="Cancel" attrs="{'invisible': ['|', ('state', 'not in', ['waiting']), ('id', '=', False)]}" data-hotkey="z"/>
        <button name="action_confirm" data-hotkey="v"
                        string="Confirm" type="object"
                        groups="equipoDeVentas.group_supervisor"
                        attrs="{'invisible': [('state', 'not in', ['waiting'])]}"/>
        <button name="action_cancel" type="object" groups="equipoDeVentas.group_supervisor" string="Cancel" attrs="{'invisible': ['|', ('state', 'not in', ['waiting']), ('id', '=', False)]}" data-hotkey="z"/>
      </xpath>
    </field>
  </record>
</odoo>